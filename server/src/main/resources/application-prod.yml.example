# =====================================================
# 프로덕션 설정 템플릿
# 이 파일을 application-prod.yml 로 복사 후 실제 값을 입력하세요.
# application-prod.yml 은 .gitignore 에 포함되어 git 에 올라가지 않습니다.
#
# 서버 실행:
#   java -jar gugarden.jar --spring.profiles.active=prod
# =====================================================

spring:
  datasource:
    url: jdbc:mysql://DB_HOST:3306/gugarden?useSSL=true&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: YOUR_DB_USERNAME
    password: YOUR_DB_PASSWORD
    hikari:
      maximum-pool-size: 20
      minimum-idle: 5

  jpa:
    show-sql: false
    properties:
      hibernate:
        format_sql: false

app:
  jwt:
    secret: YOUR_STRONG_RANDOM_JWT_SECRET_AT_LEAST_64_CHARS
    expiration: 604800000

  upload:
    dir: /var/www/gugarden/uploads

  client-url: https://yourdomain.com

  naver:
    client-id: YOUR_NAVER_CLIENT_ID
    client-secret: YOUR_NAVER_CLIENT_SECRET
    callback-url: https://yourdomain.com/api/auth/naver/callback

  naverpay:
    client-id: YOUR_NAVERPAY_CLIENT_ID
    client-secret: YOUR_NAVERPAY_CLIENT_SECRET
    chain-id: YOUR_NAVERPAY_CHAIN_ID

  toss:
    client-key: YOUR_TOSS_CLIENT_KEY
    secret-key: YOUR_TOSS_SECRET_KEY
