# =====================================================
# 프로덕션 설정 템플릿
# 이 파일을 application-prod.yml 로 복사 후 사용하세요.
# application-prod.yml 은 .gitignore 에 포함되어 git 에 올라가지 않습니다.
#
# 모든 시크릿은 환경변수로 주입합니다.
# 환경변수 설정 방법은 .env.example 파일을 참고하세요.
#
# 서버 실행:
#   java -jar gugarden.jar --spring.profiles.active=prod
# =====================================================

server:
  port: ${SERVER_PORT:9090}

spring:
  datasource:
    url: ${DB_URL}
    username: ${DB_USERNAME}
    password: ${DB_PASSWORD}
    hikari:
      maximum-pool-size: 20
      minimum-idle: 5

  jpa:
    show-sql: false
    properties:
      hibernate:
        format_sql: false

app:
  jwt:
    secret: ${JWT_SECRET}
    expiration: 604800000

  upload:
    dir: ${UPLOAD_DIR:/var/www/gugarden/uploads}

  cookie:
    secure: true
    domain: ${COOKIE_DOMAIN}

  client-url: ${CLIENT_URL}

  naver:
    client-id: ${NAVER_CLIENT_ID}
    client-secret: ${NAVER_CLIENT_SECRET}
    callback-url: ${NAVER_CALLBACK_URL}

  naverpay:
    client-id: ${NAVERPAY_CLIENT_ID:}
    client-secret: ${NAVERPAY_CLIENT_SECRET:}
    chain-id: ${NAVERPAY_CHAIN_ID:}

  toss:
    client-key: ${TOSS_CLIENT_KEY:}
    secret-key: ${TOSS_SECRET_KEY:}
